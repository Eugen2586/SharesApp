<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="@dimen/row_stock_item_margin"
    android:layout_marginTop="@dimen/row_stock_item_margin"
    android:layout_marginEnd="@dimen/row_stock_item_margin">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="@dimen/row_stock_item_padding">

        <TextView
            android:id="@+id/crypto_symbol_text"
            android:layout_width="wrap_content"
            android:layout_height="match_parent" />

        <TextView
            android:id="@+id/depot_value_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd" />

        <TextView
            android:id="@+id/crypto_category_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="viewEnd"/>

    </LinearLayout>

</androidx.cardview.widget.CardView>